{
  "expo": {
    "name": "Monitor Flota",
    "slug": "fleet-monitor",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "splash": {
      "backgroundColor": "#1a1a2e"
    },
    "android": {
      "package": "com.fleetmonitor.app",
      "adaptiveIcon": {
        "backgroundColor": "#1a1a2e"
      },
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION"
      ]
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "La app necesita acceso al GPS para enviar tu ubicaci√≥n."
        }
      ],
      "expo-asset",
      "expo-font"
    ]
  }
}
